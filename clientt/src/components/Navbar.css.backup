/* ===== MOBILE MENU STYLES ===== */
.mobile-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-menu.open {
  opacity: 1;
  visibility: visible;
}

.mobile-menu-panel {
  position: absolute;
  right: 0;
  top: 0;
  width: min(86vw, 320px);
  height: 100vh;
  background: var(--card);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  overflow-y: auto;
}

.mobile-menu.open .mobile-menu-panel {
  transform: translateX(0);
}

.mobile-menu-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid #1d1d1d;
}

.mobile-menu-header .navbar-logo {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: bold;
  color: var(--text);
}

.mobile-menu-header .navbar-logo img {
  height: 40px;
}

.mobile-menu-close {
  background: none;
  border: none;
  color: var(--text);
  cursor: pointer;
  padding: 8px;
  border-radius: 8px;
}

.mobile-menu-close:hover {
  background: rgba(255, 122, 0, 0.1);
}

.mobile-menu-nav {
  padding: 16px 0;
}

.mobile-nav-item {
  margin-bottom: 4px;
}

.mobile-nav-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  color: var(--text);
  text-decoration: none;
  transition: background 0.2s ease;
  width: 100%;
  border: none;
  background: none;
  text-align: left;
  cursor: pointer;
  font-size: 15px;
}

.mobile-nav-link:hover {
  background: rgba(255, 122, 0, 0.1);
}

/* Mobile Dropdown Styles */
.mobile-dropdown-btn {
  justify-content: space-between;
  font-weight: 600;
}

.dropdown-arrow {
  transition: transform 0.3s ease;
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.mobile-submenu {
  background: rgba(0, 0, 0, 0.3);
  border-left: 2px solid var(--accent);
  margin-left: 16px;
}

.mobile-submenu-link {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  color: var(--muted);
  text-decoration: none;
  font-size: 14px;
  transition: all 0.2s ease;
}

.mobile-submenu-link:hover {
  color: var(--text);
  background: rgba(255, 122, 0, 0.05);
}

.submenu-icon {
  font-size: 16px;
}order-bottom:1px solid #191919;
  box-shadow: 0 16px 60px rgba(0,0,0,.45);
  color: var(--text) !important;
}
.tm-toolbar{
  min-height: 86px;
  display: grid;
  grid-template-columns: auto 1fr auto auto;
  align-items: center;
  gap: 12px;
}
.tm-left,.tm-right{ display:flex; align-items:center; gap:10px; }
.tm-hamburger{ display:none; }

/* Logo */
.tm-logo{ height:clamp(68px, 6vw, 110px); object-fit:contain; }

/* ====== CENTER: nav + search ====== */
.tm-center{
  display:flex; align-items:center; gap:12px; min-width:0;
}
.tm-nav{
  display:flex; flex-wrap:nowrap; gap:12px;
  flex:1 1 auto;                  /* nav tkurret i pari */
  min-width:0;
}
.tm-link{
  color:var(--text) !important;
  font-weight:800 !important;
  text-transform:none !important;
  letter-spacing:.02em !important;
  font-size:15px !important;
  padding:8px 10px !important;
  border-radius:12px !important;
  white-space:nowrap !important;
}
.tm-link:hover{ background:rgba(255,122,0,.08) !important; color:#fff !important; }
.tm-link.accent{ color:var(--accent) !important; }

/* Dropdowns */
.dropdown-wrap{ position:relative; display:inline-block; }
.glass-submenu{
  position:absolute; top:42px; left:0;
  background:rgba(17,17,17,.82);
  border:1px solid #262626;
  border-radius:16px; padding:12px;
  display:grid; gap:10px; width:min(92vw,280px);
  box-shadow:0 24px 80px rgba(0,0,0,.6);
  backdrop-filter: blur(18px);
  z-index:3000;
}
.menu-glass-link{ text-decoration:none; }
.menu-glass-item{
  display:flex; align-items:center; gap:12px;
  padding:10px 14px; border-radius:14px;
  background:#121212; border:1px solid #1f1f1f; color:var(--text);
  transition: .18s;
}
.menu-glass-item:hover{ background:#181818; border-color:#2b2b2b; transform:translateY(-1px); }
.menu-glass-icon{ font-size:20px; }
.menu-glass-label{ font-size:15px; }

/* Search */
.tm-search-wrap{
  margin-left:auto;
  flex:0 1 clamp(240px, 28vw, 380px);
  min-width:220px; max-width:100%;
}
.tm-search .MuiOutlinedInput-root{
  height:38px; background:#0f0f0f; border-radius:12px; padding-right:0; color:var(--text);
}
.tm-search .MuiInputBase-input{ padding:8px 12px; }
.tm-search .MuiOutlinedInput-notchedOutline{ border-color:#1f1f1f; }
.tm-search .MuiOutlinedInput-root.Mui-focused .MuiOutlinedInput-notchedOutline{
  border-color:#2a2a2a; box-shadow:0 0 0 3px var(--ring);
}
.tm-search .MuiSvgIcon-root{ color:#c6bda3; font-size:20px; }
.tm-search-icon{ cursor:pointer; }

/* Right area */
.tm-cart-btn{
  width:36px; height:36px; border-radius:999px;
  background:rgba(255,122,0,.10); color:var(--accent);
}
.tm-cart-btn .MuiSvgIcon-root{ font-size:20px; }
.tm-login-btn{
  color:#0b0b0b !important; background:var(--accent) !important;
  border-radius:999px !important; font-weight:900 !important;
  text-transform:none !important; font-size:15px !important;
  height:40px !important; padding:0 20px !important;
  box-shadow:0 10px 28px rgba(255,122,0,.35) !important;
}
.tm-login-btn:hover{ background:var(--accent-hover) !important; }

/* ====== RESPONSIVE ====== */
/* 1) Desktop i gjerë → pak compact dhe ruaj vend për search */
@media (max-width: 1500px){
  .tm-nav{ gap:10px; }
  .tm-link{ padding:7px 9px; font-size:14.6px; }
  .tm-search-wrap{ flex-basis: clamp(220px, 26vw, 360px); }
}
/* 2) Para mobile: fshi vetëm “Rreth Nesh” që të mos ketë overlape */
@media (max-width: 1400px){
  .about-link{ display:none !important; }
}
/* 3) Tablet/Mobile: fshi nav-in e gjatë, përdor Drawer */
@media (max-width: 1200px){
  .tm-nav{ display:none; }
  .tm-search-wrap{ flex:1 1 auto; min-width:0; }
  .tm-hamburger{ display:flex; justify-content:flex-end; }
}
/* 4) Mobile i vogël: fshi të djathtën, vetëm Hamburger */
@media (max-width: 900px){
  .tm-right{ display:none; }
  .tm-toolbar{ grid-template-columns: auto 1fr auto; }
}
